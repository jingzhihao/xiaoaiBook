.flex {
    display: flex;
}

.tab-show {
    padding: 20rpx 10rpx;
    border-bottom: 1rpx solid rgb(172, 172, 172);
}

.tab-but {
    padding: 0 20rpx;
}

.title {
    font-size: 28rpx;
    font-weight: 700;
    color: #333333;
    height: 52rpx;
}

.author {
    height: 54rpx;
}

.shortIntro {
    word-break: break-all;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
}

.tags {
    height: 54rpx;
}

.img {
    width: 190rpx;
    height: 256rpx;
}

.tags-it {
    color: rgb(247, 247, 247);
    background-color: rgb(255, 140, 0);
    padding: 3rpx 14rpx;
    margin: 14rpx 6rpx;
    border-radius: 4rpx;
}

.tags-it1 {
    background-color: rgb(0, 206, 209);
}

.tags-it2 {
    background-color: rgb(255, 69, 0);
}