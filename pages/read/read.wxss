    @import "../../wxParse/wxParse.wxss";
    .font {
        height: 100vh;
        margin: 0 20rpx;
    }
    
    .chapter-box {
        padding: 40rpx;
        display: flex;
        flex-direction: column;
    }
    
    .chapter-title {
        font-size: 50rpx;
        margin-bottom: 40rpx;
        font-weight: 700;
    }
    
    .button-box {
        width: 300rpx;
        margin: 20px auto;
        background-color: rgb(217, 66, 80);
        color: rgb(255, 255, 255);
        line-height: 30px
    }
    
    .chapter-content {
        line-height: 55rpx;
        text-indent: 2em;
        padding: 20rpx;
    }
    
    .footer {
        width: 100%;
        height: 70rpx;
        background-color: rgb(32, 32, 32);
        color: rgb(255, 255, 255);
        position: fixed;
        left: 0px;
        bottom: 0px;
    }
    
    .top {
        width: 100%;
        height: 90rpx;
        background-color: rgb(32, 32, 32);
        color: rgb(255, 255, 255);
        position: fixed;
        left: 0px;
        bottom: 35px;
    }
    
    .colour {
        width: 66rpx;
        height: 66rpx;
        border-radius: 50%;
        background-color: rgb(255, 255, 255);
        margin: 0 10rpx
    }
    
    .top-p {
        width: 83%;
        margin: 20rpx auto;
    }
    
    .font-s {
        float: right;
    }
    
    .catalogue {
        width: 90%;
        margin: 20rpx auto;
        font-size: 40rpx;
    }
    
    .font-t {
        font-weight: 700;
    }
    
    .font-s {
        background-color: rgb(212, 70, 82);
        color: rgb(255, 255, 255);
        border-radius: 20rpx
    }
    
    .catalogue-title {
        width: 90%;
        margin: 0 auto;
        padding: 10rpx 0;
        color: rgb(104, 104, 104);
        border-bottom: 1rpx solid rgb(104, 104, 104);
    }